@{
    ViewData["Title"] = "Home Page";
}

<h2>Log</h2>

<table id="logs" class="table table-sm ">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Level</th>
            <th>Application</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<div class="container">

    <ul id="discussion"></ul>
</div>

@section scripts {
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.logHub;

            // Create a function that the hub can call back to display messages.
            chat.client.OnLog = function (timestamp, level, host, application, category, message) {

                $('#logs > tbody:last').prepend('<tr><td>' + timestamp + '</td><td>' + level + '</td><td>' + '<p>' + application + '</p>Host:<em>' + host + '</em></td><td>' + '<p><strong>' + category + '</strong></p>' + message + '</td></tr>');

            };

            // Start the connection.
            $.connection.hub.start().done(function () {

            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
